{
    "dashboard": {
        "id": null,
        "title": "Authentication Service Monitoring",
        "tags": [
            "authentication",
            "fastapi"
        ],
        "style": "dark",
        "timezone": "browser",
        "editable": true,
        "hideControls": false,
        "graphTooltip": 1,
        "panels": [
            {
                "title": "Service Overview",
                "type": "stat",
                "id": 1,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "up{job=\"auth-service\"}",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "red",
                                    "value": 0
                                },
                                {
                                    "color": "green",
                                    "value": 1
                                }
                            ]
                        },
                        "mappings": [
                            {
                                "options": {
                                    "0": {
                                        "text": "DOWN"
                                    }
                                },
                                "type": "value"
                            },
                            {
                                "options": {
                                    "1": {
                                        "text": "UP"
                                    }
                                },
                                "type": "value"
                            }
                        ]
                    }
                }
            },
            {
                "title": "Request Rate",
                "type": "graph",
                "id": 2,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "rate(http_requests_total{job=\"auth-service\"}[5m])",
                        "refId": "A"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Requests/sec",
                        "min": 0
                    },
                    {
                        "show": false
                    }
                ],
                "xAxis": {
                    "show": true
                }
            },
            {
                "title": "Response Time",
                "type": "graph",
                "id": 3,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"auth-service\"}[5m]))",
                        "refId": "A",
                        "legendFormat": "95th percentile"
                    },
                    {
                        "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"auth-service\"}[5m]))",
                        "refId": "B",
                        "legendFormat": "50th percentile"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Seconds",
                        "min": 0
                    },
                    {
                        "show": false
                    }
                ]
            },
            {
                "title": "Error Rate",
                "type": "graph",
                "id": 4,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "rate(http_requests_total{job=\"auth-service\", status_code=~\"5.*\"}[5m])",
                        "refId": "A",
                        "legendFormat": "5xx errors"
                    },
                    {
                        "expr": "rate(http_requests_total{job=\"auth-service\", status_code=~\"4.*\"}[5m])",
                        "refId": "B",
                        "legendFormat": "4xx errors"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Errors/sec",
                        "min": 0
                    },
                    {
                        "show": false
                    }
                ]
            },
            {
                "title": "Authentication Requests by Endpoint",
                "type": "graph",
                "id": 5,
                "gridPos": {
                    "h": 8,
                    "w": 24,
                    "x": 0,
                    "y": 16
                },
                "targets": [
                    {
                        "expr": "rate(auth_requests_total[5m])",
                        "refId": "A"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Requests/sec",
                        "min": 0
                    },
                    {
                        "show": false
                    }
                ]
            },
            {
                "title": "Database Connections",
                "type": "stat",
                "id": 6,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 24
                },
                "targets": [
                    {
                        "expr": "database_connections_active",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green",
                                    "value": 0
                                },
                                {
                                    "color": "yellow",
                                    "value": 10
                                },
                                {
                                    "color": "red",
                                    "value": 20
                                }
                            ]
                        }
                    }
                }
            },
            {
                "title": "Active Users",
                "type": "stat",
                "id": 7,
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 24
                },
                "targets": [
                    {
                        "expr": "active_users_total",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "continuous-GrYlRd"
                        }
                    }
                }
            }
        ],
        "time": {
            "from": "now-1h",
            "to": "now"
        },
        "timepicker": {
            "refresh_intervals": [
                "5s",
                "10s",
                "30s",
                "1m",
                "5m",
                "15m",
                "30m",
                "1h",
                "2h",
                "1d"
            ]
        },
        "refresh": "30s"
    }
}
